/* pages/index/index.wxss */
/* 今日预约 */
.content{
   display:flex;
   flex-wrap: wrap;
   padding:8rpx;
   justify-content: space-around;
}
.pic{
  width:48%;
  height:280rpx;
  margin-bottom:14rpx;
  border-radius:10rpx;
}

/* 爆款推荐 */
/* 设置最外面的父元素 弹性布局 */
.container{
  display:flex;
  flex-direction: row;
  justify-content:space-around;
  padding:8rpx;
  flex-wrap:wrap;
}
/* 循环的个体 */
.container>view{
  width:48%;
  height:500rpx;
  margin-bottom:14rpx;
}
/* 设置图片 */
.re-pic{
  width:100%;
  height:380rpx;
  border-radius:6px;
}
/*标题*/
.re-title{
  font-size:25rpx;
  max-height:68rpx;
  overflow: hidden;
}
/*价格*/
.re-price{
  color:#f00;
  font-weight: bold;
}
.re-re{
  color:#333;
  font-size:25rpx;
  text-decoration: line-through;
}
/* 今日预约图标 */
.icon1,.icon2{
  
  margin:auto;
}
/* 爆款推荐图标 */
.pic-icon{
  width:350rpx;
  height:60rpx;
}


/* 以上小宋 */

/* 轮播图 */
/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.slide-image{
  width: 100%;
  height:100%;
}
swiper{
  display:block;
  height:180px;
}

/* 搜索框 */
.head_box{
  margin:5px 15px;
}
.head_text{
  font-size:15px;
}
.head_search{
  display:inline-block;
  width:320px;
  border-radius: 5px;
}


.search_box{
  display:inline-block;
  width:300px;
  height:30px;
  line-height: 30px;
  border-radius: 15px!important;
  background:#F6F6F6;
}
.search_box text{
  font-size:12px;
  color:gray
}

/* 今日预约、爆款推荐图标 */
.icon_box{
  background:#F6F6F6;
  height:60px;
  line-height: 60px;
}
.icon{
  margin-left:120px;
  vertical-align: middle;
  width:150px;
  height:30px;
}
/* 顶部地址弹窗 */
.chuang button{
  margin:5px 20px;
}
.chuang{
  display:flex;
  flex-wrap: wrap;
  width:100%;
  text-align:center;
}