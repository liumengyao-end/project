/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}
.little_button{
  text-align:left;
  width:60px;
  height:40px;
  background:#f6f6f6;
  border-radius: 18px;
  color:rgb(75, 69, 69);
  font-size:15px;
}
.button_box{
  display:flex;
  flex-wrap: wrap;
}
/* 小图标 */
.little_box_box{
  margin:auto;
  width:360px;
  height:135px;
  display:flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.little_box{
  width:65px;
  height:65px;
  text-align:center;
}
.little_text{
  font-size:12px;
  color:rgb(54, 50, 50);
}
/* 左侧图片右侧商品详情 */
/* 正文 */
.text_box{
  display:flex;
  flex-wrap: wrap;
  width:200px;
  height:150px;
}
.text_text{
  display:inline-block;
  width:200px;
  height:150px;
  margin-left:5px;
}
.text_text .c1{
  font-size:18px;
  display:inline-block;
  margin-bottom:15px;
}
.text_text .c2{
  color:red;
}
.text_text .c3{
  color:rgba(182, 179, 179, 0.541);
  font-size:10px;
  text-decoration:line-through;
  margin-left:10px;
}

.product_box{
  display:flex;
  flex-wrap:wrap;
  margin-bottom:10px;
  padding:5px;
}
